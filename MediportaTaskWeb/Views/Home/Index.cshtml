@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Here is a list of 1000 most used tags on Stack Overflow.</p>
</div>
<div class="d-flex flex-column flex-grow-1">
    @foreach(var tag in Model.Tags)
    {
        <div class="bg-success text-white m-2 p-2 d-flex">
            <div class="pe-2 me-2 border-end d-flex align-items-center">
            #@tag.Index
            </div>
            <div>
                Name: @tag.Name <br />
                Used: @tag.Count times (@(tag.ProcentageInScope.ToString("0.########", System.Globalization.CultureInfo.InvariantCulture))% of presented scope)
            </div>
        </div>
    }
</div>
